@inherits IntroductionBase
<BForm>
    <BFormItem TValue="string">
        <BMarkdownEditor @bind-Value="@Product.Introduction"></BMarkdownEditor>
    </BFormItem>
    <BFormActionItem Style="text-align:right">
        <BButton Type="@ButtonType.Primary" IsDisabled="!CanUpdate" OnClick="SaveIntroductionAsync">
            @if (CanUpdate)
            {
                @("保存");
            }
            else
            {
                @("无权更新");
            }
        </BButton>
    </BFormActionItem>
</BForm>